//convert upper case into lower case and vise versa 

#include<iostream>
using namespace std;

int main(){
    
    string name;
    cout<<"Enter input : ";
    cin>>name;
    for(char &ch : name){
        if( ch >= 'A' && ch <='Z'){
            ch += 32;
        }
        else if( ch >= 'a' && ch <='z'){
            ch -= 32;
        }
    }
    cout<<"Answer : "<<name;
    
    
    return 0;
}
